{
  "name": "ScreenRun",
  "author": "ScreenRun LLC",
  "manifest_version": 2,
  "version": "1.1.0",
  "description": "Quickly record a video of your tab with your voice and clicks and import into ScreenRun.app",
  "background": {"scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["screenrun.js"],
      "all_frames": false,
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs"],
  "browser_action": {
		"default_title": "ScreenRun",
  	"default_icon": "icons/off.png"
	},
  "icons": {
    "16": "icons/off.png",
    "128": "icons/off.png",
    "48": "icons/off.png"
  }
}
